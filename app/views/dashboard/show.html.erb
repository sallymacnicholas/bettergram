<br>
 <div class="row bump">
    <div class="small-12 large-12 columns">
       <div class="row">
          <div class="profile-card">
             <div class="small-6 large-4 columns">
                <%= image_tag current_user.image %>
             </div>
             <div class="small-12 large-8 columns">
                <h3><%= user.username %>&nbsp; <span id='wtf'>EDIT PROFILE</span></h3></div>
                <div class="small-12 large-8 columns">
                <p><%= user.bio %></p>
                <p id="blue-site"><%= user.website %></p>
                <% if user.bio.empty? %>
                  <br>
                  <br>
                  <br>
                  <br>
                  <br>
                <% end %>
                <br>
             </div>
             <div class="small-12 large-8 columns">
            <p><span><strong> <%= user['counts']['media'] %></strong> posts&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
              <span><strong> <%= user['counts']['followed_by'] %></strong> followers&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
              <span><strong> <%= user['counts']['follows'] %></strong> following</span></p>
             </div>
          </div>
       </div>
    </div>
 </div>
 <div>

   <div class="row">
      <% client.user_recent_media.each do |media| %>
    <div class="small-4 columns">
      <div class="item-wrapper">
        <div class="img-wrapper">
          <%= image_tag media["images"]["low_resolution"].url %>
        </div>
        <br>
      </div>
    </div>
     <% end %>
  </div>
