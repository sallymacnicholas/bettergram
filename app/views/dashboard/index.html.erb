<%= render 'shared/navbar' %>
<div class="row">
  <% current_user.feed.each do |feed_item| %>
    <div class="large-4 columns">
      <div class="card">
        <% if feed_item.caption %>
          <span class="title"><%= image_tag feed_item.user.profile_picture, height:'30', width:'30', class:"profile-pic-small" %><%= feed_item["caption"]["from"]["username"] %></span>
          <div class="image"><span>
            <a href="" data-reveal-id="<%= feed_item["caption"]["from"]["username"] %>"><%= image_tag feed_item["images"]["low_resolution"].url %></a>
            <div id="<%= feed_item["caption"]["from"]["username"] %>" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
              <div class="large-8 columns">
              <%= image_tag feed_item["images"]["standard_resolution"].url %><br>
              </div>
              <div class="large-4 columns">
                <h6 id="username_big"><%= feed_item["caption"]["from"]["username"] %></h6>
                <%= feed_item.likes["count"] %> likes<br>
              <% feed_item.comments.data.each do |comment| %>
                  <strong id="username"><%= comment.from.username %></strong>  <%= comment.text %>
                  <% end %>
              </div>
              <a class="close-reveal-modal" aria-label="Close">&#215;</a>
            </div></span>
          </div>
          <div class="content">
            <p> <strong><%= feed_item.likes["count"] %> likes</strong>
            <p><strong id="username"><%= feed_item.caption.from.username %></strong>  <%= truncate(feed_item["caption"].text, length: 250, omission: '...(continued)') %></p>
            <p> <% if feed_item["caption"].text.length < 250 %>
                <% feed_item.comments.data.first(2).each do |comment| %>
                  <strong><%= comment.from.username %></strong>  <%= comment.text %> <% end %> </p>
              <% end %>
              </div>
        <% end %>
        <div class="action">
          <%= image_tag '2764.png', height:'20', width: '20'%> Add a comment...
        </div>
      </div>
      <br>
    </div>
  <% end %>
</div>

