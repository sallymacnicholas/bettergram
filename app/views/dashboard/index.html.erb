<%= render 'shared/navbar' %>
<div class="row">
  <% current_user.feed.each do |feed_item| %>
    <div class="large-4 columns">
      <div class="card">
        <% if feed_item.caption %>
          <span class="title"><%= feed_item["caption"]["from"]["username"] %></span>
          <div class="image">
            <%= image_tag feed_item["images"]["low_resolution"].url %>
          </div>
          <div class="content">
            <p> <strong><%= feed_item.likes["count"] %> likes</strong>
            <p><strong><%= feed_item.caption.from.username %></strong>  <%= truncate(feed_item["caption"].text, length: 250, omission: '...(continued)') %></p>
            <p> <% if feed_item["caption"].text.length < 250 %>
                <% feed_item.comments.data.first(2).each do |comment| %>
                  <strong><%= comment.from.username %></strong>  <%= comment.text %> <% end %> </p>
              <% end %>
              </div>
        <% end %>
        <div class="action">
          <%= image_tag '2764.png', height:'20', width: '20'%> Add a comment...
        </div>
      </div>
      <br>
    </div>
  <% end %>
</div>

